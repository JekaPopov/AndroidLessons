<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:hint="@string/editCity"
        android:textSize="@dimen/middleText"
        android:gravity="center"/>


    <EditText
        android:id="@+id/temp_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/city"
        android:inputType="numberDecimal"
        android:hint="@string/editTemp"
        android:textSize="@dimen/smallText"
        android:gravity="center"/>

    <EditText
        android:id="@+id/temp_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temp_current"
        android:layout_centerHorizontal="true"
        android:inputType="numberDecimal"
        android:hint="@string/editMaxTemp"
        android:textSize="@dimen/smallText"
        android:gravity="center"/>

    <EditText
        android:id="@+id/temp_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:inputType="numberDecimal"
        android:layout_below="@+id/temp_max"
        android:hint="@string/editMinTemp"
        android:textSize="@dimen/smallText"
        android:gravity="center"/>


    <EditText
        android:id="@+id/pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temp_min"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        android:hint="@string/editPressure"
        android:textSize="@dimen/smallText"
        android:gravity="center"/>


    <EditText
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pressure"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        android:hint="@string/editHumidity"
        android:textSize="@dimen/smallText"
        android:gravity="center"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sendData"
        android:layout_below="@+id/humidity"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>
</RelativeLayout>
</ScrollView>